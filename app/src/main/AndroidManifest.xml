<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Tema2">
        <activity
            android:name=".Splashscreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Dashboard"
            android:theme="@style/Tema2" />
        <activity
            android:name=".Datamahasiswa"
            android:label="Data Mahasiswa"
            android:parentActivityName=".Datamahasiswa"
            android:theme="@style/Tema1" />
        <activity
            android:name=".Informasi"
            android:label="Tentang Aplikasi"
            android:parentActivityName=".Informasi"
            android:theme="@style/Tema1" />
        <activity
            android:name=".Inputdata"
            android:label="Input Data"
            android:parentActivityName=".Inputdata"
            android:theme="@style/Tema1" />
        <activity
            android:name=".Detaildata"
            android:label="Detail Data"
            android:parentActivityName=".Detaildata"
            android:theme="@style/Tema1" />
        <activity
            android:name=".Updatedata"
            android:label="Update Data"
            android:parentActivityName=".Updatedata"
            android:theme="@style/Tema1" />
    </application>

</manifest>